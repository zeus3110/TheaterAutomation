<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:id="@+id/textView"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On/Off"
        android:id="@+id/ButtonSharpBDKey1"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_usual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="気温"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ButtonSharpBDKey1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30.0℃"
        android:id="@+id/textView_SFCName"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/ButtonSharpBDKey1"
        android:layout_toEndOf="@+id/ButtonSharpBDKey1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/Button_Read"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/ButtonSharpBDKey1"
        android:layout_toEndOf="@+id/ButtonSharpBDKey1"
        android:background="@drawable/button_usual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IO"
        android:id="@+id/textView6"
        android:layout_below="@+id/Button_Read"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON1"
        android:id="@+id/ButtonON1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_usual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF1"
        android:id="@+id/ButtonOFF1"
        android:layout_alignBottom="@+id/ButtonON1"
        android:layout_toRightOf="@+id/ButtonON1"
        android:layout_toEndOf="@+id/ButtonON1"
        android:background="@drawable/button_usual" />

</RelativeLayout>
